<h1>My Friends</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @user.friends.each do |user_friend| %>
        <tr>
            <td><%= user_friend.name %></td>
            <td>
                <%= link_to 'Profile', my_portfolio_path(user_friend), :class => 'btn btn-xs btn-success' %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>